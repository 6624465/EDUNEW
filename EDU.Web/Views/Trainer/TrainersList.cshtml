            {
            <text>
                country = @Session["BranchId"].ToString();
            </text>
            }
            $.ajax({
                url: '@Url.Content("~/Report/VendorsAndTrainersReport?country=")' + country,
                method: 'get',
                contentType: 'text/html',
                success: function (html) {
                    $('#myModal').html(html);
                    $('#myModal').modal('show');
                },
                error: function (err) {
                }
            });
        }
