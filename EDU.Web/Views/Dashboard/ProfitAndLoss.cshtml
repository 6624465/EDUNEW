<style>
    .highcharts-button-symbol {
        display: none !important;
    }

    .highcharts-legend {
        display: none !important;
    }

    .highcharts-credits {
        display: none !important;
    }

    .highcharts-axis-title {
        display: none !important;
    }

    .dot {
        height: 15px;
        width: 15px;
        border-radius: 50%;
