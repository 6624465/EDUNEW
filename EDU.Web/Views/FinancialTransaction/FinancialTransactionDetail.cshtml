@model EDU.Web.Models.FinancialTransactionDetail

<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">@ViewBag.Title</h4>
        </div>
        <div class="modal-body" id="FinancialTransactionModalBody">
            <div class="row">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        <span class="pull-right">Description</span>
                    </label>
                    <div class="col-md-6">
                       @Html.TextBoxFor(x=>x.Description, new{@class="form-control",@disabled= "disabled" })
                    </div>
                </div>
            </div>
            <div class="row css10">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        <span class="pull-right">Amount</span>
                    </label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(x => x.Amount, new { @class = "form-control numCss", @placeholder= "Amount", onkeyup="CalculateLocalAmount()" })
                    </div>
                </div>
            </div>
            <div class="row css10">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        <span class="pull-right">Local Amount</span>
                    </label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(x => x.LocalAmount, new { @class = "form-control numCss", @placeholder = "LocalAmount",@disabled = "disabled" })
                    </div>
                </div>
            </div>
            <div class="row css10">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        <span class="pull-right">Reference Doc</span>
                    </label>
                    <div class="col-md-6">
                       <input type="file" value="@Model.ReferenceDoc"/>
                    </div>
                </div>
            </div>
            <div class="row css10">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        <span class="pull-right">Remarks</span>
                    </label>
                    <div class="col-md-6">
                        @Html.TextAreaFor(x => x.Remarks, new { @class="form-control"})
                    </div>
                </div>
            </div>
            <div class="modal-footer css10">
                <button type="button" onclick="SaveFinancialTransaction()" class="btn btn-success btn-frmt btn-sm"> <i class="fa fa-floppy-o"></i>&nbsp;Save</button>
                <button type="button" class="btn btn-default btn-frmt btn-sm" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
            </div>
        </div>
    </div>
</div>
@section SectionScripts {
    <script type="text/javascript">
        
    </script>
}
