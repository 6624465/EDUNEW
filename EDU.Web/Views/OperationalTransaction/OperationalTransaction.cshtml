@model EDU.Web.Models.OperationalTransaction
@{

    var listMonths = new List<SelectListItem>()
                                          {
                                           new SelectListItem {Text = "Select Month",   Value = "0"},
                                           new SelectListItem {Text = "Janaury",   Value = "1"},
                                           new SelectListItem {Text = "February", Value = "2"},
                                           new SelectListItem {Text = "March", Value = "3"},
                                           new SelectListItem {Text = "April",   Value = "4"},
                                           new SelectListItem {Text = "May", Value = "5"},
                                           new SelectListItem {Text = "June", Value = "6"},
                                           new SelectListItem {Text = "July",   Value = "7"},
                                           new SelectListItem {Text = "August", Value = "8"},
                                           new SelectListItem {Text = "September", Value = "9"},
                                           new SelectListItem {Text = "October",   Value = "10"},
                                           new SelectListItem {Text = "November", Value = "11"},
                                           new SelectListItem {Text = "December", Value = "12"}
                                       };
}
<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">@ViewBag.Title</h4>
        </div>
        <div class="modal-body" id="ProductCategoryModalBody">
            @Html.HiddenFor(x => x.OperationalTransactionId)
                        @Html.HiddenFor(x => x.Month)
                        @Html.HiddenFor(x => x.Year)
            <div class="row">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        <span class="pull-right">Year</span>
                    </label>
                    <div class="col-md-6">
                        @Html.DropDownListFor(x => x.Year, Enumerable.Range(2017, 14).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), "Select Year ", new { @class = "form-control " ,@disabled= "disabled" })
                    </div>
                </div>
            </div>
            <div class="row css10">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        <span class="pull-right">Month</span>
                    </label>
                    <div class="col-md-6">
                        @Html.DropDownListFor(x => x.Month, listMonths, new { @class = "form-control", @disabled= "disabled" })
                    </div>
                </div>
            </div>
            <div class="row css10">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        <span class="pull-right">Category</span>
                    </label>
                    <div class="col-md-6">
                        @Html.DropDownListFor(x => x.CategoryId,
                    new SelectList((List<EDU.Web.Models.Lookup>)ViewData["CategoryData"], "LookupID", "LookupDescription"),
                    "Select Category", new { @class = "form-control" ,onchange= "GetParticularsByCategory(this)" })
                    </div>
                </div>
            </div>
            <div class="row css10">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        <span class="pull-right">Particulars</span>
                    </label>
                    <div class="col-md-6">
                        @if (Model.OperationalTransactionId == -1)
                        {
                            @Html.DropDownListFor(x => x.ParticularsId,
                                Enumerable.Empty<SelectListItem>(),
                                "Select Category",
                                new { @class = "form-control", disabled = "disabled" })
                        }
                        else
                        {
                            @Html.DropDownListFor(x => x.ParticularsId,
                    new SelectList((List<EDU.Web.Models.Lookup>)ViewData["ParticularsData"], "LookupID", "LookupDescription"),
                    "Select Category", new { @class = "form-control" })
                        }
                    </div>
                </div>
            </div>
            <div class="row css10">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        <span class="pull-right">Amount</span>
                    </label>
                    <div class="col-md-6">
                       @Html.TextBoxFor(x => x.Amount, "{0:#.#}", new { @class="form-control",@placeholder="Amount"})
                    </div>
                </div>
            </div>
            <div class="modal-footer css10">
                <button type="button" onclick="SaveOperationalTransaction()" class="btn btn-success btn-frmt btn-sm"> <i class="fa fa-floppy-o"></i>&nbsp;Save</button>
                <button type="button" class="btn btn-default btn-frmt btn-sm" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
            </div>
        </div>
    </div>
</div>