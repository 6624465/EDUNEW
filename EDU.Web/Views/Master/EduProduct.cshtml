@model EZY.EDU.Contract.EduProduct
<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">@ViewBag.Title</h4>
        </div>
        <div class="modal-body">
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.IsActive)

            <div class="row">
                <div class="form-group">
                    <label class="col-md-4 control-label">
                        <span class="pull-right">Product Name</span>
                    </label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(x => x.ProductName,
                    new
                    {
                        @class = "form-control",
                        placeholder = "Product Name",
                        onblur = "ValidateProductName(true)"
                    })
                        <label id="error" style="color:red">Product already exists. Please re-enter new product.</label>
                    </div>
                </div>
            </div>            
        </div>
        <div class="modal-footer">
            <button type="button" onclick="SaveEduProduct()" class="btn btn-success btn-frmt green btn-sm">
                <i class="fa fa-floppy-o"></i>&nbsp;Save
            </button>
            <button type="button" class="btn btn-default btn-frmt btn-sm" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
        </div>
    </div>

</div>


